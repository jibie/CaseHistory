<Window x:Class="OfIllness.FrmEditSclerte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="新增骨片信息" Height="289" Width="399" ResizeMode="CanResize">

    <Canvas >
        <Button Canvas.Left="267" Canvas.Top="223" Content="确 定" Name="btnOk" Width="43" Click="btnOk_Click" />
        <Button Canvas.Left="324" Canvas.Top="223" Content="取消" Name="btnCancel" Width="43" Click="btnCancel_Click" />
        <Button Canvas.Left="316" Canvas.Top="12" Content="浏览…"    Name="btnBrowserFile" Width="51" Click="btnBrowserFile_Click" />
        <TextBox Canvas.Left="69" BorderBrush="Gray" Canvas.Top="12"  Name="txtPicUrl" Text="{Binding SleritePicUrl}" Width="241" IsReadOnly="True" />
        <TextBlock Canvas.Left="12" Canvas.Top="16"  Name="textBlock1" Text="骨片图片:" />
        <TextBlock Canvas.Left="12" Canvas.Top="45"  Name="textBlock2" Text="骨片名称:" />
        <TextBox Canvas.Left="69" Canvas.Top="43"    Name="textBox2" Text="{Binding Title}" Width="88" />
        <TextBlock Canvas.Left="12" Canvas.Top="74"  Name="textBlock3" Text="骨片说明↓:" />
        <TextBox BorderBrush="Green" BorderThickness="1" Text="{Binding SleriteNote}" Canvas.Left="12" Canvas.Top="103" Height="116" Name="textBox3" Width="145" />
        <Image Canvas.Left="167"  Canvas.Top="55" Height="164" Name="imgPic"  Stretch="Uniform"  Width="200" />
    </Canvas>
</Window>
